SELECT title
FROM topmovies
WHERE Worldwide > (SELECT avg(Worldwide) FROM topmovies)
AND Domestic > (SELECT avg(Domestic) FROM topmovies);

SELECT Title, Studio, Worldwide,
CASE
WHEN Worldwide > 1500 THEN 'blockbuster'
WHEN Worldwide > 750 THEN 'average_success'
ELSE "flop"
END AS 'success_category'
FROM topmovies;
